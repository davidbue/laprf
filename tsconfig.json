{
  "compilerOptions": {
    "sourceMap": true,
    "target": "esnext",
    "moduleResolution": "node",
    "types": ["node"],
    "outDir": "lib",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
