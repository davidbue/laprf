{
  "compilerOptions": {
    "sourceMap": true,
    "target": "esnext",
    "moduleResolution": "node",
    "types": ["node"],
    "outDir": "lib",
    "declaration": true,
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strict": true
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/scratch.ts"]
}
